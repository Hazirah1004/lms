<p id="notice"><%= notice %></p>

<h1>Listing Managers</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Name</th>
      <th>Dept</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.employee_id %></td>
         <td><%= Employee.find(manager.employee_id).name %></td>
         <td><%= Department.find(manager.dept_id).dept %></td>
        
        <td><%= link_to 'Show', manager %></td>
        <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
        <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

